@model IEnumerable<SuperMartApp.Domain.Entities.Product>
@{
  ViewData["Title"] = "Products";
}
<h2>Products</h2>
<form class="row g-2 mb-3" method="get">
  <div class="col-auto">
    <input class="form-control" name="q" placeholder="Search name/SKU/barcode" value="@Context.Request.Query["q"]" />
  </div>
  <div class="col-auto">
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
  <div class="col-auto">
    <a class="btn btn-success" href="@Url.Action("Create")">Add</a>
  </div>
</form>
<table class="table table-striped table-sm">
  <thead>
    <tr>
        <th>SKU</th>
        <th>Name</th>
        <th>MRP</th>
        <th>GST%</th>
        <th>Barcode</th>
        <th></th>
    </tr>
  </thead>
  <tbody>
  @foreach (var p in Model)
  {
    <tr>
      <td>@p.Sku</td>
      <td>@p.Name</td>
      <td>@p.Mrp</td>
      <td>@p.GstRate</td>
      <td>@p.Barcode</td>
      <td class="text-end">
        <a class="btn btn-link btn-sm" href="@Url.Action("Edit", new { id=p.Id })">Edit</a>
        <form method="post" action="@Url.Action("Delete", new { id=p.Id })" class="d-inline">
          <button class="btn btn-link btn-sm text-danger" onclick="return confirm('Delete?')">Delete</button>
        </form>
      </td>
    </tr>
  }
  </tbody>
</table>
