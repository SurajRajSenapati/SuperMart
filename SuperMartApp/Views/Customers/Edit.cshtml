@model SuperMartApp.Domain.Entities.Customer
@{ ViewData["Title"] = "Edit Customer"; }
<h2>Edit Customer</h2>
<form method="post">
  @Html.AntiForgeryToken()
  @Html.AntiForgeryToken()
  @Html.AntiForgeryToken()
  @Html.AntiForgeryToken()
  <div class="row g-3">
    <div class="col-md-3"><label class="form-label">Code</label><input class="form-control" asp-for="Code" /></div>
    <div class="col-md-5"><label class="form-label">Name</label><input class="form-control" asp-for="Name" /></div>
    <div class="col-md-2"><label class="form-label">Phone</label><input class="form-control" asp-for="Phone" /></div>
    <div class="col-md-4"><label class="form-label">Email</label><input class="form-control" asp-for="Email" /></div>
    <div class="col-md-2"><label class="form-label">Points</label><input class="form-control" asp-for="LoyaltyPoints" type="number" /></div>
    <div class="col-12 form-check"><input class="form-check-input" asp-for="ConsentSms" /><label class="form-check-label">SMS consent</label></div>
    <div class="col-12 form-check"><input class="form-check-input" asp-for="ConsentEmail" /><label class="form-check-label">Email consent</label></div>
    <div class="col-12"><button class="btn btn-primary">Save</button><a class="btn btn-secondary" href="@Url.Action("Index")">Back</a></div>
  </div>
</form>
